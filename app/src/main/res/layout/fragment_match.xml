<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentmatch"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8C000000"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_weight="0.60"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:text="TIME UNTIL NEXT MATCH: 4 days, 5 hours, 57 minutes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/remaintime"
            android:layout_weight="1"
            android:autoText="false"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textAlignment="textEnd"
            android:background="#b6422b"
            android:paddingRight="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.57"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp">


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/league"
            android:id="@+id/imageButton2"
            android:layout_weight="1"
            android:background="#CC992d19"
            android:layout_marginRight="5dp"
            android:padding="20dp"
            android:scaleType="fitCenter" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/calendar"
            android:id="@+id/imageButton4"
            android:layout_weight="1"
            android:background="#CC992d19"
            android:layout_marginRight="5dp"
            android:padding="20dp"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/matchplanic"
            android:id="@+id/imageButton3"
            android:layout_weight="1"
            android:background="#CC992d19"
            android:padding="20dp"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit."
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:background="#CC992d19"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:textAlignment="center" />

        <TextView
            android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit."
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView8"
            android:layout_weight="1"
            android:background="#CC992d19"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:padding="5dp" />

        <TextView
            android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit."
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView9"
            android:layout_weight="1"
            android:background="#CC992d19"
            android:textAlignment="center"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_weight="0.78"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingBottom="5dp">

        <Button
            android:text="LEAGUE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/button16"
            android:layout_weight="1"
            android:background="#CCc94323"
            android:layout_marginRight="5dp"
            android:textSize="18sp" />

        <Button
            android:text="CALENDAR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/button19"
            android:layout_weight="1"
            android:background="#CCc94323"
            android:layout_marginRight="5dp"
            android:textSize="18sp" />

        <Button
            android:text="MATCH PLAN"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/button18"
            android:layout_weight="1"
            android:background="#CCc94323"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>