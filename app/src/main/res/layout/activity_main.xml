<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.hadi.coachenhancer.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#D9000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="32dp"
        android:gravity="center_vertical">

        <Button
            android:layout_width="116dp"
            android:id="@+id/button6"
            android:onClick="replaceFragmentLogo"
            android:background="@drawable/logo"
            android:layout_weight="0.09"
            android:layout_height="32dp"
            android:gravity="bottom|center_vertical|center_horizontal" />

        <Button
            android:text="Team"
            android:layout_width="wrap_content"
            android:onClick="replaceFragmentTeam"
            android:id="@+id/teambtnmain"
            android:layout_weight="0.04"
            android:layout_height="38dp"
            android:background="@null"
            android:foregroundGravity="center_vertical|center_horizontal" />

        <Button
            android:text="Manage"
            android:layout_width="wrap_content"
            android:id="@+id/managebtnmain"
            android:onClick="replaceFragmentManager"
            android:layout_weight="0.04"
            android:layout_height="38dp"
            android:background="@null"
            android:foregroundGravity="center_vertical|center_horizontal"/>

        <Button
            android:text="MATCH"
            android:layout_width="wrap_content"
            android:id="@+id/matchbtnmain"
            android:onClick="replaceFragmentMatch"
            android:layout_weight="0.04"
            android:layout_height="38dp"
            android:background="@null"
            android:foregroundGravity="center_vertical|center_horizontal"/>

        <Button
            android:text="CHAT"
            android:layout_width="wrap_content"
            android:id="@+id/chatbtnmain"
            android:onClick="replaceFragmentChat"
            android:layout_weight="0.00"
            android:layout_height="38dp"
            android:background="@null"
            android:foregroundGravity="center_vertical|center_horizontal"
            />

        <Button
            android:id="@+id/settingsbtnmain"
            android:onClick="replaceFragmentSetting"
            android:background="@drawable/settings"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp">

    </LinearLayout>
</LinearLayout>


