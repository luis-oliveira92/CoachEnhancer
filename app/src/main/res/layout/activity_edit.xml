<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragmentedit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="horizontal"
      android:baselineAligned="false">


      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:weightSum="1">

          <ScrollView android:id="@+id/ScrollView01"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_marginBottom="5sp"
              android:layout_marginTop="5sp"
              android:scrollbars="none">
              <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  tools:weightSum="2"
                  android:background="#8C000000"
                  android:layout_marginLeft="5sp"
                  android:scrollbarSize="0dp">

                  <ImageView
                      android:layout_width="30sp"
                      android:layout_height="30sp"
                      android:id="@+id/ballic"
                      android:background="@drawable/ballic"
                      android:layout_marginRight="10sp"
                      android:layout_marginLeft="10sp"
                      android:layout_marginBottom="10sp"
                      android:layout_marginTop="10sp" />

                  <ImageView
                      android:layout_width="30sp"
                      android:layout_height="30sp"
                      android:id="@+id/coneic"
                      android:background="@drawable/coneic"
                      android:layout_marginRight="10sp"
                      android:layout_marginLeft="10sp"
                      android:layout_marginBottom="10sp"
                      android:layout_marginTop="10sp" />

                  <Button
                      android:layout_width="30sp"
                      android:layout_height="30sp"
                      android:id="@+id/s"
                      android:background="@drawable/paletteic"
                      android:layout_marginRight="10sp"
                      android:layout_marginLeft="10sp"
                      android:layout_marginBottom="10sp"
                      android:layout_marginTop="10sp" />

                  <ImageView
                      android:layout_width="30sp"
                      android:layout_height="30sp"
                      app:srcCompat="@drawable/whiteic"
                      android:id="@+id/whiteic"
                      android:layout_marginBottom="2sp"
                      android:layout_marginTop="2sp"
                      android:layout_marginLeft="10sp"
                      android:layout_marginRight="10sp" />

                  <ImageView
                      android:layout_width="30sp"
                      android:layout_height="30sp"
                      app:srcCompat="@drawable/yellowic"
                      android:id="@+id/yelloic"
                      android:layout_marginLeft="10sp"
                      android:layout_marginRight="10sp"
                      android:layout_marginStart="10sp"
                      android:layout_marginBottom="2sp"
                      android:layout_marginTop="2sp" />

                  <ImageView
                      android:layout_width="30sp"
                      android:layout_height="30sp"
                      app:srcCompat="@drawable/blueic"
                      android:id="@+id/blueic"
                      android:layout_marginBottom="2sp"
                      android:layout_marginRight="10sp"
                      android:layout_marginLeft="10sp"
                      android:layout_marginTop="2sp" />

                  <ImageView
                      android:layout_width="30sp"
                      android:layout_height="30sp"
                      app:srcCompat="@drawable/redic"
                      android:id="@+id/redic"
                      android:layout_marginLeft="10sp"
                      android:layout_marginRight="10sp"
                      android:layout_marginStart="10sp"
                      android:layout_marginBottom="2sp"
                      android:layout_marginTop="2sp" />

                  <ImageView
                      android:layout_width="30sp"
                      android:layout_height="30sp"
                      android:id="@+id/linethicknessdraw"
                      android:background="@drawable/lineweightic"
                      android:layout_marginRight="10sp"
                      android:layout_marginLeft="10sp"
                      android:layout_marginBottom="10sp"
                      android:layout_marginTop="10sp" />

                  <ImageView
                      android:layout_width="30sp"
                      android:layout_height="30sp"
                      app:srcCompat="@drawable/xsizeic"
                      android:id="@+id/xsizeic"
                      android:layout_marginBottom="2sp"
                      android:layout_marginLeft="10sp"
                      android:layout_marginRight="10sp"
                      android:layout_marginTop="2sp" />

                  <ImageView
                      android:layout_width="30sp"
                      android:layout_height="30sp"
                      app:srcCompat="@drawable/xxsizeic"
                      android:id="@+id/xxsizeic"
                      android:layout_marginBottom="2sp"
                      android:layout_marginLeft="10sp"
                      android:layout_marginRight="10sp"
                      android:layout_marginTop="2sp" />

                  <ImageView
                      android:layout_width="30sp"
                      android:layout_height="30sp"
                      app:srcCompat="@drawable/xxxsizeic"
                      android:id="@+id/xxxsizeic"
                      android:layout_marginBottom="2sp"
                      android:layout_marginLeft="10sp"
                      android:layout_marginRight="10sp"
                      android:layout_marginTop="2sp" />

                  <ImageView
                      android:layout_width="30sp"
                      android:layout_height="30sp"
                      app:srcCompat="@drawable/addlinesic"
                      android:id="@+id/freelineic"
                      android:layout_marginRight="10sp"
                      android:layout_marginLeft="10sp"
                      android:layout_marginBottom="10sp"
                      android:layout_marginTop="10sp"/>

                  <ImageView
                      android:layout_width="30sp"
                      android:layout_height="30sp"
                      android:id="@+id/playerdraw"
                      android:background="@drawable/addplayereditoric"
                      android:layout_marginRight="10sp"
                      android:layout_marginLeft="10sp"
                      android:layout_marginBottom="10sp"
                      android:layout_marginTop="10sp" />

                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      app:srcCompat="@drawable/eraseric"
                      android:id="@+id/eraseric"
                      android:layout_marginBottom="10sp"
                      android:layout_marginRight="10sp"
                      android:layout_marginLeft="10sp"
                      android:layout_marginTop="10sp" />

                  <ImageView
                      android:layout_width="30sp"
                      android:layout_height="30sp"
                      app:srcCompat="@drawable/iconeraseric"
                      android:id="@+id/iconeraseric"
                      android:layout_marginBottom="10sp"
                      android:layout_marginLeft="10sp"
                      android:layout_marginRight="10sp"
                      android:layout_marginTop="10sp" />

              </LinearLayout>
          </ScrollView>

          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              tools:weightSum="1"
              android:layout_weight="1"
              android:weightSum="1"
              android:baselineAligned="false">

              <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/centereditorlay">

                  <LinearLayout
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="10"
                      android:id="@+id/drawcanvas"
                      android:weightSum="1">

                      <RelativeLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:id="@+id/drawonme"
                          android:background="@drawable/field"
                          tools:background="@drawable/field"
                          android:alpha="0.9"
                          android:layout_weight="0.90"
                          android:layout_marginLeft="5sp"
                          android:layout_marginTop="5sp">

                      </RelativeLayout>

                  </LinearLayout>

                  <LinearLayout
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:background="#8C000000"
                      android:layout_marginTop="5sp"
                      android:layout_marginLeft="5sp"
                      android:layout_marginRight="0sp"
                      android:layout_marginBottom="5sp"
                      android:layout_height="5dp">

                      <Button
                          android:text="1"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/button25"
                          android:layout_weight="1"
                          android:backgroundTint="#c44c3b"
                          android:gravity="center"
                          android:textSize="12sp"
                          android:layout_marginLeft="2sp" />

                      <Button
                          android:text="2"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/button24"
                          android:layout_weight="1"
                          android:backgroundTint="#c44c3b"
                          android:elevation="0dp"
                          android:gravity="center"
                          android:textSize="12sp" />

                      <Button
                          android:text="3"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/button23"
                          android:layout_weight="1"
                          android:backgroundTint="#c44c3b"
                          android:elevation="0dp"
                          android:gravity="center"
                          android:textSize="12sp"
                          android:layout_marginRight="2sp" />
                  </LinearLayout>

              </LinearLayout>

          </LinearLayout>

          <LinearLayout
              android:orientation="vertical"
              android:layout_width="56dp"
              android:layout_height="match_parent"
              tools:weightSum="2"
              android:weightSum="1">

              <Button
                  android:text="Back"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:id="@+id/controlright"
                  android:onClick="backToMainMenu"
                  android:textSize="11sp"
                  android:layout_marginBottom="1dp"
                  android:layout_marginRight="1dp"
                  android:backgroundTint="#006b3c"
                  android:layout_marginLeft="1dp" />

              <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_gravity="center_horizontal"
                  android:background="#8C000000"
                  android:layout_marginLeft="5sp"
                  android:layout_marginRight="5sp"
                  android:layout_marginBottom="5sp">

                  <Button
                      android:text="1"
                      android:id="@+id/button30"
                      android:backgroundTint="#c44c3b"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="2dp" />


                  <Button
                      android:text="2"
                      android:id="@+id/button28"
                      android:backgroundTint="#c44c3b"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:layout_gravity="center_horizontal" />

                  <Button
                      android:text="3"
                      android:id="@+id/button27"
                      android:backgroundTint="#c44c3b"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:layout_gravity="center_horizontal" />

                  <Button
                      android:text="+"
                      android:id="@+id/button26"


                      android:backgroundTint="#c12a14"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:layout_gravity="center_horizontal"/>

                  <Button
                      android:text="-"
                      android:id="@+id/button31"


                      android:backgroundTint="#c12a14"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:layout_gravity="bottom|center_horizontal" />


              </LinearLayout>

          </LinearLayout>

      </LinearLayout>

      <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button14"
                android:layout_weight="1" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button13"
                android:layout_weight="1" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button12"
                android:layout_weight="1" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button11"
                android:layout_weight="1" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button10"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>